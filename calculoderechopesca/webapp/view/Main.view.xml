<mvc:View
    controllerName="com.tasa.tolvas.calculoderechopesca.controller.Main"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form" 
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}" showFooter="true" showNavButton="false">
                    <content>
                        <form:Form width="100%" editable="true" visible="true" binding="{FormSearchModel>/Form/0/}">
                            <!-- <form:title>
                                <core:Title text="Datos de selección" level="Auto"/>
                            </form:title> -->
                            <form:toolbar>
                                <Toolbar>
                                    <Title text="Ingresar datos"/>
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://settings" text="Nueva Declaración Jurada" press="_onNuevaDeclaracionJuradaPress"/>
                                </Toolbar>
                            </form:toolbar>
                            <form:formContainers>
                                <form:FormContainer visible="true">
                                    <form:formElements>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Ejercicio" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input type="Text" value="{FormSearchModel>Ejercicio}" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0">
                                                    <layoutData>
                                                        <layout:GridData span="XL5 L5 M5 S12" />
                                                    </layoutData>
                                                </Input>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Periodo" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input type="Text" value="{FormSearchModel>Periodo}" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0">
                                                    <layoutData>
                                                        <layout:GridData span="XL5 L5 M5 S12" />
                                                    </layoutData>
                                                </Input>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Button text="Ejecutar" type="Default" icon="sap-icon://search" iconFirst="true" width="50%" enabled="true" visible="true" iconDensityAware="false" press="_onEjecutarPress"/>
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                    <form:title/>
                                </form:FormContainer>
                            </form:formContainers>
                            <form:layout>
                                <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                            </form:layout>
                        </form:Form>
                        <!-- <Button text="Buscar" type="Default" icon="sap-icon://search" iconFirst="true" width="50%" enabled="true" visible="true" iconDensityAware="false" class="sapUiResponsiveMargin"/> -->
                    </content>
                    <footer>
                        <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                            <content>
                                <ToolbarSpacer width=""/>
                            </content>
                        </OverflowToolbar>
                    </footer>
                    <headerContent/>
                    <subHeader/>
                    <customHeader/>
                </Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
