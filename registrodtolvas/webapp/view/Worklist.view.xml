<mvc:View
    controllerName="com.tasa.registrodtolvas.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table">

    <semantic:SemanticPage
        id="page">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:headerContent>
            <form:Form 
                editable="true"
                binding="{/datosSeleccion}">
                <form:title>
                    <core:Title icon="sap-icon://filter"  text="Datos de selección" level="Auto"/>
                </form:title>
                <form:formContainers>
                    <form:FormContainer >
                        <form:formElements>
                            <form:FormElement label = "Centro">
                                <form:fields>
                                    <Input 
                                        value="{WERKS}"
                                        description="{DESCR}" 
                                        change="multiInputPlanta" 
                                        class="sapUiSmallMarginBottom"
                                        id="idPlantaIni"
                                        placeholder="Ingresar Centro..."
                                        showSuggestion="true"
                                        suggestionRows="{/plantas}"
                                        suggestionItemSelected="onSuggestionItemSelected"
                                        showTableSuggestionValueHelp="false"
                                        valueState="Information"
                                        valueStateText="Seleccione centro">
                                        <suggestionColumns>
                                            <Column
                                                hAlign="Begin"
                                                width="5rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Centro"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="5rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Planta"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="8rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Descripción"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="8rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="R.U.C."/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                popinDisplay="Inline"
                                                width="20rem"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Descr. empresa"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="10rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Ind. propiedad"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="5rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Puerto"/>
                                            </Column>
                                            <Column
                                                hAlign="Begin"
                                                width="8rem"
                                                popinDisplay="Inline"
                                                demandPopin="true"
                                                minScreenWidth="Tablet">
                                                <Label text="Desc. puerto"/>
                                            </Column>
                                        </suggestionColumns>
                                        <suggestionRows>
                                            <ColumnListItem>
                                            <cells>
                                                <ObjectStatus 
                                                    text="{WERKS}"
                                                    state="Information"/>
                                                <Text text="{CDPTA}"/>
                                                <ObjectStatus 
                                                    text="{DESCR}"
                                                    state="Indication07"/>
                                                <Text text="{STCD1}"/>
                                                <Text text="{NAME1}"/>
                                                <Text text="{
                                                    path:'INPRP',
                                                    formatter:'.formatter.setIndPropiedad'
                                                }"/>
                                                <Text text="{CDPTO}"/>
                                                <Text text="{DSPTO}"/>
                                            </cells>
                                            </ColumnListItem>
                                        </suggestionRows>
                                    </Input>
                                    <!-- <Text text="" id="idDescr"  width="auto" >
                                    </Text> -->
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Fecha inicio descarga" >
                                <form:fields>
                                    <DatePicker
                                        value="{FIDES}" 
                                        id="idFecha" 
                                        displayFormat="dd/MM/yyyy" 
                                        valueFormat="dd/MM/yyyy" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Hora inicio descarga">
                                <form:fields>
                                    <TimePicker 
                                        value="{HIDES}" 
                                        id="idHora" 
                                        valueFormat="HHmmss" 
                                        displayFormat="HH:mm"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                    <form:FormContainer >
                        <form:formElements>
                            <form:FormElement label="Cantidad de Filas">
                                <form:fields>
                                    <Input 
                                        value="{CantidadFilas}" 
                                        id="idCant" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="">
                                <form:fields>
                                    <Button text="Buscar" icon="sap-icon://search" type="Emphasized" press="onGetDataTable" />
                                    <Button text="Limpiar" icon="sap-icon://clear-filter" type="Ghost" press="onLimpiar" />
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout 
                        adjustLabelSpan="false" 
                        labelSpanL="3"
                        labelSpanM="2" 
                        columnsL="2" 
                        columnsM="1"
                        labelSpanS="12"/>
                </form:layout>
            </form:Form>
        </semantic:headerContent>

        <semantic:content>
