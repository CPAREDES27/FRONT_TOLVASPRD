                            <Text text="{NMEMB}"/>
                            <Text text="{MREMB}"/>
                            <Text text="{
                                    path:'CPPMS',
                                    formatter: '.formatter.formatFloat'
                                }"/>
                            <Text text="{FIDES}"/>
                            <Text text="{HIDES}"/>
                            <Text text="{FFDES}"/>
                            <Text text="{HFDES}"/>
                            <Text text="{
                                path:'CNPDS',
                                formatter: '.formatter.formatFloat'
                            }"/>
                        </cells>
