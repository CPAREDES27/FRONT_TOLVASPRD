<mvc:View
    controllerName="com.tasa.registrodtolvas.controller.Object"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        busy="{objectView>/busy}"
        busyIndicatorDelay="{objectView>/delay}"
        showFooter="true">

        <semantic:titleHeading>
            <Title
                text="Editar Número de descarga {NRDES}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <form:Form 
                editable="true" 
                >
                <form:title>
                    <core:Title icon="sap-icon://edit" text="Ingresar datos" />
                </form:title>
                <form:formContainers>
                    <form:FormContainer expandable="true" expanded="true" >
                        <form:formElements>
                            <form:FormElement label="Planta">
                                <form:fields>
                                    <ObjectStatus 
                                        text="{WERKS} {DESCR}" 
                                        state="Information"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Número de descarga">
                                <form:fields>
                                    <ObjectStatus 
                                        text="{NRDES}"
                                        state="Indication07" />
                                </form:fields>
                            </form:FormElement >
                            <form:FormElement label="Número de ticket">
                                <form:fields>
                                    <ObjectStatus 
                                        text="{TICKE}" 
                                        state="Information"  />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement >
                                <form:label>
                                    <Label text="Embarcación" design="Bold" />
                                </form:label>
                                <form:fields>
                                    <Input 
                                        id="inputEmbId" 
                                        value="{/help/CDEMB}"
                                        description="{/help/NMEMB}"  
                                        placeholder="Seleccione embarcación" 
                                        valueHelpOnly="true" 
                                        showValueHelp="true"  
                                        valueHelpRequest="onSearchHelp"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Matrícula" >
                                <form:fields>
                                    <Input 
                                        value="{/help/MREMB}"
                                        editable="false"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="CBOD">
                                <form:fields>
                                    <ObjectStatus text="{
                                            path: 'CPPMS',
                                            formatter:'.formatter.formatFloat'
                                        }"  
                                        state="Information"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Fecha inicio descarga" >
                                <form:fields>
                                    <ObjectStatus text="{FFDES} {
                                        path: 'HIDES',
                                        type: 'sap.ui.model.type.Time',
                                        formatOptions: {
                                            source: {   
                                                pattern: 'HH:mm:ss'
                                            },
                                            pattern: 'HH:mm'
                                        }
                                    }" 
                                    state="Information"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Fecha fin descarga">
                                <form:fields>
                                    <ObjectStatus text="{FFDES} {
                                            path: 'HFDES',
                                            type: 'sap.ui.model.type.Time',
                                            formatOptions: {
                                                source: {   
                                                    pattern: 'HH:mm:ss'
                                                },
                                                pattern: 'HH:mm'
                                            }
                                        }"  
                                        state="Information" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="Pesca descargada">
                                <form:fields>
                                    <ObjectStatus text="{
                                        path: 'CNPDS',
                                        formatter:'.formatter.formatFloat'
                                    }" 
                                    state="Information" />
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout 
                        adjustLabelSpan="false" 
                        columnsL="4" 
                        columnsM="2" 
                        emptySpanL="3"
                        labelSpanL="3" 
                        labelSpanM="3" 
                        labelSpanS="12"/>
                </form:layout>
            </form:Form>
        </semantic:content>

        <semantic:closeAction>
			<semantic:CloseAction press="onNavBack" />
		</semantic:closeAction>

        <semantic:messagesIndicator>
			<semantic:MessagesIndicator id="messagePopoverId" press="onShowMessagepopover" visible="false"/>
		</semantic:messagesIndicator>

        <semantic:positiveAction>
            <semantic:PositiveAction  text="Guardar" press="onSaveRegister" />
        </semantic:positiveAction>

    </semantic:SemanticPage>

</mvc:View>