<mvc:View
    controllerName="com.tasa.tolvas.ingresodescargamanual.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                    <content>
                        <form:Form width="100%" editable="true" visible="true">
                            <form:title>
                                <core:Title text="Ingresar datos" level="Auto"/>
                            </form:title>
                            <form:formContainers>
                                <form:FormContainer visible="true">
                                    <form:formElements>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Centro" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input id="centro" value="{FormModel>/CentroPlanta}" description="{FormModel>/DescPlanta}" liveChange="onChangeInput" valueState="Information" valueStateText="Ingrese centro" showSuggestion="true"  showTableSuggestionValueHelp="false" suggestionRows="{ComboModel>/Plantas}" suggestionItemSelected="onPressCentro" width="100%">
                                                    <suggestionColumns>
                                                        <Column>
                                                            <Label text="Planta" />
                                                        </Column>
                                                        <Column>
                                                            <Label text="Descripción" />
                                                        </Column>
                                                        <Column>
                                                            <Label text="Centro" />
                                                        </Column>
                                                        <Column>
                                                            <Label text="Armador" />
                                                        </Column>
                                                    </suggestionColumns>
                                                    <suggestionRows>
                                                        <ColumnListItem>
                                                            <Label text="{ComboModel>CDPTA}" />
					                                        <Label text="{ComboModel>DESCR}" />
                                                            <Label text="{ComboModel>WERKS}" />
                                                            <Label text="{ComboModel>NAME1}" />
                                                        </ColumnListItem>
                                                    </suggestionRows>
                                                </Input>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Embarcación" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input id="embarcacion" value="{FormModel>/Embarcacion}" description="{FormModel>/DescEmba}" showValueHelp="true" valueHelpRequest="onAbrirAyudaEmbarcacion" width="100%" valueStateText="Invalid entry"/>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Balanza" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <ComboBox id="cbxBalanza" change="onChange" selectedKey="{FormModel>/Balanza}" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%" items="{ComboModel>/Balanzas}">
                                                    <items>
                                                        <core:Item text="{ComboModel>descripcion}" enabled="true" key="{ComboModel>id}"/>
                                                    </items>
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Punto de descarga" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <ComboBox id="cbxPuntoDesc" change="onChange" selectedKey="{FormModel>/PuntoDesc}" items="{ComboModel>/PtsDesc}" enabled="true" visible="true" width="auto" valueState="None" maxWidth="100%">
                                                    <items>
                                                        <core:Item text="{ComboModel>descripcion}" enabled="true" key="{ComboModel>id}"/>
                                                    </items>
                                                </ComboBox>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Ticket" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input id="ticket" liveChange="onChangeInput" value="{FormModel>/Ticket}" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Especie" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input id="especies" liveChange="onChangeInput" value="{FormModel>/Especie}" description="{FormModel>/DescEsp}" suggestionItemSelected="onPressEspecie" valueState="Information" valueStateText="Ingrese especie" showSuggestion="true" showTableSuggestionValueHelp="false" suggestionRows="{ComboModel>/Especies}" width="100%">
                                                    <suggestionColumns>
                                                        <Column>
                                                            <Label text="Centro" />
                                                        </Column>
                                                        <Column>
                                                            <Label text="Descripción" />
                                                        </Column>
                                                    </suggestionColumns>
                                                    <suggestionRows>
                                                        <ColumnListItem>
                                                            <Label text="{ComboModel>id}" />
					                                        <Label text="{ComboModel>descripcion}" />
                                                        </ColumnListItem>
                                                    </suggestionRows>
                                                </Input>
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Fecha inicio descarga" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <DateTimePicker id="dtpIniDesc" value="{FormModel>/FechIniDesc}" valueFormat="yyyyMMdd HH:mm" displayFormat="dd/MM/yyyy HH:mm" visible="true" width="auto" />
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Fecha fin descarga" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <DateTimePicker id="dtpFinDesc" value="{FormModel>/FechFinDesc}" valueFormat="yyyyMMdd HH:mm" displayFormat="dd/MM/yyyy HH:mm" visible="true" width="auto" />
                                            </form:fields>
                                        </form:FormElement>
                                        <form:FormElement visible="true">
                                            <form:label>
                                                <Label text="Pesca descargada" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                                            </form:label>
                                            <form:fields>
                                                <Input id="pescDesc" liveChange="onChangeInput" width="auto" value="{FormModel>/PescDesc}" />
                                            </form:fields>
                                        </form:FormElement>
                                    </form:formElements>
                                    <form:title/>
                                </form:FormContainer>
                            </form:formContainers>
                            <form:layout>
                                <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
                            </form:layout>
                        </form:Form>
                    </content>
                    <footer>
                        <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                            <content>
                                <ToolbarSpacer width=""/>
                                <Button text="Guardar" press="onGuardar" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                            </content>
                        </OverflowToolbar>
                    </footer>
                    <headerContent/>
                    <subHeader/>
                    <customHeader/>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
